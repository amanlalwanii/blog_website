<%- include("partials/header"); %>
<h1>Home</h1>
<p><%= homeStartingContent %> </p>
<% posts.forEach(function (post){ %>
    <% url="/posts/"+ post.title %>
    <h1> <%= post.title %> </h1>

        
    <% if(post.content.length > 100){ %>
    <%   str= post.content.substring(0,100)+"...";  %>
    <% }else {%>
    <%   str= post.content;} %>

    <p>  <%= str %>   <a href=<%= url %> >Read More</a> </p>
    
    

<% }); %>


